# Generated inventory
[local]
localhost ansible_connection=local ansible_python_interpreter="{{ ansible_playbook_python }}"

[proxmox_hosts]
{% for host in proxmox_hosts %}
{{ host.ip }} ansible_user={{ proxmox_hosts_ssh_user }} hostname={{ host.hostname }}
{% endfor %}

[k3_nodes]
{% for vm in vms %}
{{ vm.ip }} ansible_user={{ vms_ssh_user }} hostname={{ vm.hostname }}
{% endfor %}

[all:vars]
gateway_ip={{ network.gateway_ip  }}
ntp_ip={{ network.ntp_ip }}

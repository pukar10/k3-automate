# Generated inventory
[local]
localhost ansible_connection=local ansible_python_interpreter=auto_silent

[primary_host]
{{ proxmox.api_host }} ansible_user={{ proxmox.ssh_user  }}  hostname={{ proxmox.nodes[0].name }}

[k3_nodes]
{% for n in k3_nodes %}

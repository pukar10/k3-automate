# /etc/chrony/chrony.conf — Ansible template

# ── Primary time source (internal) # e.g. 192.168.1.1
server {{ internal_gateway }} iburst      
# ── Fallback public pools 
pool 0.pool.ntp.org iburst maxsources 2
pool 1.pool.ntp.org iburst maxsources 2

# ── Allow LAN clients to query this host # e.g 192.168.1.0/24 (VM subnet)
allow {{ ntp_allow_cidr }}                

# ── House-keeping 
driftfile /var/lib/chrony/chrony.drift
makestep 1 3
rtcsync
logdir /var/log/chrony